@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Flavor>;

<h1>Flavor</h1>
<br>

<form asp-controller="Flavors" asp-action="Index">
    <p>
        <i class="fa fa-search"></i> <input type="text"  name="SearchFlavor" placeholder="Find Flavor">
    </p>
</form>

<br>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <h3>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</h3>
}
<br>
<h4>@Html.ActionLink("Add new flavor", "Create")</h4>
<h4>@Html.ActionLink("Delete All Flavors", "DeleteAll")</h4>
<h4>@Html.ActionLink("Home", "Index", "Home")</h4>