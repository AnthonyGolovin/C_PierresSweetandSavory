@{
  Layout = "_Layout";
}
@using System.Security.Claims
@using SweetAndSavory.Models;

@model IEnumerable<SweetAndSavory.Models.Treat>

<h1>Pierres Sweet and Savory Treats</h1>
<br>
<form asp-controller="Home" asp-action="Index">
    <p>
        <i class="fa fa-search"></i> <input type="text"  name="Search" placeholder="Search">
    </p>
</form>

@if (User.Identity.IsAuthenticated)
{
  <h3>@Html.ActionLink("See all flavors", "Index", "Flavors")</h3>
  <h3>@Html.ActionLink("See all treats", "Index", "Treats")</h3>
}
else
{
  <h3>@Html.ActionLink("Create an account", "Index", "Account")</h3>
  <h3>@Html.ActionLink("Log in", "Login", "Account")</h3>
}
